<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>InicioSesion</servlet-name>
        <servlet-class>servlet.InicioSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCart</servlet-name>
        <servlet-class>servlet.AddCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarUsuarios</servlet-name>
        <servlet-class>servlet.RegistrarUsuarios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>EliminarArticulos</servlet-name>
        <servlet-class>servlet.EliminarArticulos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuardarCompras</servlet-name>
        <servlet-class>servlet.GuardarCompras</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarUsuarios</servlet-name>
        <servlet-class>servlet.EliminarUsuarios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarProductos</servlet-name>
        <servlet-class>servlet.AgregarProductos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizarProductos</servlet-name>
        <servlet-class>servlet.ActualizarProductos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InicioSesion</servlet-name>
        <url-pattern>/iniciar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCart</servlet-name>
        <url-pattern>/agregarproducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarUsuarios</servlet-name>
        <url-pattern>/nuevousuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarArticulos</servlet-name>
        <url-pattern>/eliminarArticulos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuardarCompras</servlet-name>
        <url-pattern>/guardarCompras</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarUsuarios</servlet-name>
        <url-pattern>/eliminarUsuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarProductos</servlet-name>
        <url-pattern>/agregarProductos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarProductos</servlet-name>
        <url-pattern>/actualizarProductos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
